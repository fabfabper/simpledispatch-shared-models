<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
    
    <!-- NuGet Package Configuration -->
    <PackageId>SimpleDispatch.SharedModels</PackageId>
    <Version>1.7.0</Version>
    <Authors>Your Name</Authors>
    <Company>Your Company</Company>
    <Description>Shared entities and DTOs for SimpleDispatch applications</Description>
    <PackageTags>simpledispatch;entities;dto;shared</PackageTags>
    <RepositoryUrl>https://github.com/yourusername/simpledispatch-shared-models</RepositoryUrl>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.0" />
    <PackageReference Include="NJsonSchema" Version="11.4.0" />
    <PackageReference Include="NJsonSchema.CodeGeneration.TypeScript" Version="11.4.0" />
    <PackageReference Include="System.Text.Json" Version="9.0.0" />
  </ItemGroup>

</Project>
